<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Product">


 <insert id="INSERT" parameterType="product"  >
	insert into productTBL(productId,productName,productPrice,productDesc,productImg) 
	values (seq_productTBL.nextval,#{productName},#{productPrice},#{productDesc},#{productImgStr})
 </insert>
 
 <select id="SELECTALL" resultType="product" parameterType="product">
   select productId ,productName,productPrice,productDesc,productImg  as productImgStr,productDate 
   from productTBL 
 </select>

 <select id="SELECTONE" resultType="product" parameterType="product">
   select productId ,productName,productPrice,productDesc,productImg  as productImgStr,productDate 
   from productTBL where productId=#{productId}
 </select>
 
  <delete id="DELETE" parameterType="product"  >
	delete from productTBL where productId=#{productId}
  </delete>
 
</mapper>	
